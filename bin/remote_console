#!/bin/bash

# Gets the first pod from the namespace
POD=$(kubectl get pods --namespace=app-template -o go-template --template '{{range .items}}{{.metadata.name}}{{"\n"}}{{end}}' | head -n 1)

# Remote iex into that console
kubectl exec -it $POD --namespace app-template -- /bin/bash -c "./_build/prod/rel/app_template/bin/app_template remote_console"
